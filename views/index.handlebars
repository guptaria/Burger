<p><h2><center>Are you Hungry??</center></h2>
<center>Request a Burger and place Your Order</center></p>



<div class="flex-container">

  <div class="container-1">
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{>burgers/burger-block devoured=false}}
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="container-2">
  {{!-- <img src="/assets/img/burger.jpeg" width="300px" , height="300px" , alt="burger image"> --}}
<form class="create-form">
  <div class="form-group">
    <label for="bur"></label>
    <input type="text" id="bur" name="name">
  </div> 
  <button type="submit"><center><i class="fas fa-hamburger">Place Order</i></center></button>
</form>
</div>

<div class="container-3">
<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div>

